page {
  background-color: #1072F4;
}

.body {
  width: 100%;
  /* height: 100vh; */
  /* background-color: #10aeb5; */
  padding: 10px;
  box-sizing: border-box;
}

.container1 {
  width: 100%;
  /* box-sizing: border-box; */
  /* margin: 10px; */
  border-radius: 15px;
  background-color: #fff;
}

/* 头部标题 */
.header {
  text-align: center;
  padding: 20px 0;
}

.title {
  font-size: 22px;
  font-weight: bold;
  margin-right: 20px;
}

.updateTime {
  font-size: 14px;
  color: #acacac;
}

/* 头部数据总览 */
.content {
  display: flex;
  width: 100%;
  justify-content: space-around;
  /* align-items: center; */
}

.allConfirm {
  text-align: center;
  color: #d73a30;
}

.nowConfirm {
  text-align: center;
  color: #ee5b00;
}

.deadNum {
  text-align: center;
  color: #003146;
}

.cureNum {
  text-align: center;
  color: #00c7c7;
}

.number {
  font-weight: bold;
}

.item {
  color: #000;
  font-size: 12px;
  background-color: #ccc;
  padding: 4px;
  margin: 2px;
  border-radius: 5px;
}

.change {
  font-size: 12px;
}

/* 地图 */
.map {
  width: 100%;
  height: 300PX;
}

/* 按钮 */
.btn {
  margin: 20px auto;
  text-align: center;
}

.btn view {
  display: inline-block;
  width: 20%;
  height: 30px;
  font-size: 12px;
  width: 30%;
  line-height: 30px;
}

.btn view:first-child {
  margin-right: 10px;
}

.isBtn {
  color: #ffb1b2;
  border: 1px solid #ffb1b2;
  background-color: #fff;
}

.noBtn {
  border: 1px solid #eee;
}

/* 海外疫情趋势 */
.line{
  width: 100%;
  height: 300PX;
}

/* 前10 */
.bar{
  height: 300PX;
}